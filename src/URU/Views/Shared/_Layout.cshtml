@using Microsoft.AspNetCore.Mvc.Localization

<!DOCTYPE html>

<html lang="en-us">

<head>
    <environment include="Development">
        <link rel="stylesheet" type="text/css" href="~/css/fonts.css" asp-append-version="true">
        <link rel="stylesheet" type="text/css" href="~/css/layout.css" asp-append-version="true">
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" type="text/css" href="~/bundle/css/layout.min.css" asp-append-version="true">
    </environment>

    @RenderSection("Styles", required: false)
    <meta title="URU" http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="author" content="Adrian Reithaug">
    <meta name="description" content="URU - A creative space.">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="application-name" content="URU" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/content/favicon/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="196x196" href="~/content/favicon/favicon-196x196.png" />
    <link rel="apple-touch-icon-precomposed" sizes="57x57" href="~/content/favicon/apple-touch-icon-57x57.png" />
    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="~/content/favicon/apple-touch-icon-152x152.png" />
    <meta name="msapplication-TileColor" content="#FFFFFF" />
    <meta name="msapplication-TileImage" content="~/content/favicon/mstile-144x144.png" />
    <meta name="msapplication-square70x70logo" content="~/content/favicon/mstile-70x70.png" />
    <meta name="msapplication-square150x150logo" content="~/content/favicon/mstile-150x150.png" />
    <meta name="msapplication-wide310x150logo" content="~/content/favicon/mstile-310x150.png" />
    <meta name="msapplication-square310x310logo" content="~/content/favicon/mstile-310x310.png" />

    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="nav-container">
        <nav class="primary-nav">
            <ul class="nav-left">
                <li><a class="logo" asp-controller="Home" asp-action="Index"><img src="~/content/favicon/apple-touch-icon-57x57.png" /></a></li>
            </ul>
            <ul class="underline">
                <li><a asp-controller="Masters" asp-action="Index">@StringLocalizer["Masters"]</a></li>
            </ul>
            <ul class="underline">
                <li><a asp-controller="Spotify" asp-action="Index">@StringLocalizer["Spotify"]</a></li>
            </ul>
            <ul class="underline">
                <li><a asp-controller="TicTacToe" asp-action="Index">@StringLocalizer["TicTacToe"]</a></li>
            </ul>
            <ul>
                <li><a href="@Url.Action("SetLanguage", "Home" , new { returnUrl=Context?.Request?.Path })">@StringLocalizer["SelectedLanguage"]</a></li>
            </ul>
        </nav>

        <nav class="mobile-nav">
            <ul class="nav-left">
                <li>
                    <a class="logo" asp-controller="Home" asp-action="Index"><img src="~/content/favicon/apple-touch-icon-57x57.png" /></a>
                </li>
            </ul>
            <ul class="mobile-nav-toggle">
                <li id="x-fade">
                    <div class="icon-left"></div>
                    <div class="icon-right"></div>
                </li>
            </ul>
            <ul class="dropdown">
                <li>
                    <a asp-controller="Masters" asp-action="Index">@StringLocalizer["Masters"]</a>
                </li>
                <li>
                    <a asp-controller="TicTacToe" asp-action="Index">@StringLocalizer["TicTacToe"]</a>
                </li>
                <li>
                    <a asp-controller="Spotify" asp-action="Index">@StringLocalizer["Spotify"]</a>
                </li>
                <li>
                    <a href="@Url.Action("SetLanguage", "Home" , new { returnUrl=Context?.Request?.Path })">@StringLocalizer["SelectedLanguage"]</a>
                </li>
            </ul>
        </nav>
    </div>

    <main>
        @RenderBody()
    </main>
    @RenderSection("Scripts", required: false)
</body>
</html>

<environment include="Development">
    <script src="~/js/layout.js" asp-append-version="true"></script>
</environment>

<environment exclude="Development">
    <script src="~/bundle/js/layout.min.js" asp-append-version="true"></script>
</environment>